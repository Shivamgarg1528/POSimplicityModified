<resources>

    <!-- POS NEW APP THEME-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/textAppearance_mdpi_10_sp</item>
    </style>

    <!-- Navigation Drawer Item Theme-->
    <style name="NavigationDrawerStyle">
        <item name="android:listDivider">@color/colorAccent</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/textAppearance_mdpi_08_sp</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="ProgressHUD" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="myCoolDialog" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="PopupTheme" parent="AppTheme">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="MyTextView" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_button</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/factor_mdpi_05_dp</item>
        <item name="android:textColor">@drawable/selector_button</item>
        <item name="android:textSize">@dimen/textAppearance_mdpi_10_sp</item>
    </style>

</resources>