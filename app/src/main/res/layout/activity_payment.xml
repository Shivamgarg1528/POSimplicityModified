<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal">

        <android.support.design.widget.TabLayout
            android:id="@+id/activity_payment_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#8A95A9"
            android:paddingStart="@dimen/factor_mdpi_14_dp"
            android:paddingEnd="@dimen/factor_mdpi_14_dp"
            app:tabIndicatorColor="@color/colorWhite"
            app:tabIndicatorHeight="@dimen/factor_mdpi_02_dp"
            app:tabMode="scrollable"
            app:tabSelectedTextColor="@color/colorWhite"
            app:tabTextAppearance="@style/TabTextAppearance"
            app:tabTextColor="@color/popupTextColor" />

        <ImageView
            android:id="@+id/activity_payment_iv_overflow"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/factor_mdpi_10_dp"
            android:background="@null"
            android:src="@drawable/ic_action_navigation_more_vert" />

    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/activity_payment_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/dialogs_bg" />

</LinearLayout>