<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="460dp"
    android:layout_height="330dp"
    android:background="@drawable/drawable_assign_transaction_bg">

    <EditText
        android:id="@+id/dialog_assign_transaction_layout_edt_mobile_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:inputType="phone"
        android:hint="Enter Customer Mobile Number"
        android:textColorHint="@android:color/darker_gray"
        android:background="@null"
        android:gravity="center"
        android:maxLength="10"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textAppearance_mdpi_10_sp" />

    <TextView
        android:id="@+id/dialog_assign_transaction_layout_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_assign_transaction_layout_edt_mobile_no"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/factor_mdpi_28_dp"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textAppearance_mdpi_08_sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dialog_assign_transaction_layout_tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_assign_transaction_layout_tv_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/factor_mdpi_11_dp"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textAppearance_mdpi_08_sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dialog_assign_transaction_layout_tv_assign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/factor_mdpi_02_dp"
        android:background="@drawable/ic_green_bg"
        android:gravity="center"
        android:text="@string/string_assign_transaction"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/textAppearance_mdpi_12_sp"
        android:visibility="invisible" />
</RelativeLayout>