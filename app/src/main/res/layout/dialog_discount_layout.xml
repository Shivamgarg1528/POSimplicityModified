<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialogs_bg"
    android:orientation="vertical"
    android:padding="@dimen/factor_mdpi_02_dp">

    <TextView
        android:id="@+id/dialog_discounts_layout_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/popupTextColor1"
        android:textSize="@dimen/textAppearance_mdpi_10_sp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".7"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dialog_discounts_layout_tv_discount"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/factor_mdpi_03_dp"
                android:background="@drawable/qty_bg"
                android:gravity="center"
                android:maxLines="3"
                android:padding="@dimen/factor_mdpi_03_dp"
                android:scrollbars="vertical"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textAppearance_mdpi_16_sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3">

            <include layout="@layout/keypad_layout" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_discounts_layout_tv_apply_dollar_discount"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_green_bg"
            android:gravity="center"
            android:text="@string/string_apply_dollar_discount"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textAppearance_mdpi_12_sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dialog_discounts_layout_tv_apply_percentage_discount"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_green_bg"
            android:layout_marginStart="@dimen/factor_mdpi_03_dp"
            android:gravity="center"
            android:text="@string/string_apply_percentage_discount"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textAppearance_mdpi_12_sp"
            android:textStyle="bold" />


    </LinearLayout>

</LinearLayout>