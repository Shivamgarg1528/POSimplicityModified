<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="100">

    <TextView
        android:id="@+id/fragment_about_tv_app_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawablePadding="@dimen/factor_mdpi_06_dp"
        android:drawableTop="@drawable/app_icon"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/textAppearance_mdpi_14_sp" />

    <View
        android:layout_marginTop="@dimen/factor_mdpi_10_dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/factor_mdpi_01_dp"
        android:background="@color/colorAccent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/factor_mdpi_01_dp"
        android:background="@color/colorWhite" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/factor_mdpi_05_dp"
        android:text="POSimplicity provides you and your employees an intuitive and fast way to ring up orders. The POS app also helps a company grow through an automated social media marketing plug in that is fully integrated into a customer rewards the program. The point of sale app also has a module that allows retail storefront businesses to create and operate an online store using the same control panel that is used to create cash register buttons and track inventory."
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/textAppearance_mdpi_10_sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/factor_mdpi_01_dp"
        android:background="@color/colorAccent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/factor_mdpi_01_dp"
        android:background="@color/colorWhite" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/string_all_right_reserved"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="@dimen/factor_mdpi_10_dp"
        android:textSize="@dimen/textAppearance_mdpi_10_sp"
        android:textStyle="bold" />

</LinearLayout>