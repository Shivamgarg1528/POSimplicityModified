<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/checkout_adapter_row_layout_iv_item_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Delete Item"
        android:src="@drawable/ic_delete" />

    <TextView
        android:id="@+id/checkout_adapter_row_layout_iv_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textColor="#484848"
        android:textSize="@dimen/textAppearance_mdpi_08_sp" />


    <TextView
        android:id="@+id/checkout_adapter_row_layout_iv_item_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/factor_mdpi_03_dp"
        android:layout_marginStart="@dimen/factor_mdpi_03_dp"
        android:layout_weight="1"
        android:gravity="center_vertical|end"
        android:maxLines="1"
        android:textColor="#484848"
        android:textSize="@dimen/textAppearance_mdpi_08_sp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/factor_mdpi_01_dp"
        android:layout_margin="@dimen/factor_mdpi_01_dp"
        android:layout_weight="1.2"
        android:background="#484848"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/checkout_adapter_row_layout_iv_item_qty_decrease"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_remove_qty"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textAppearance_mdpi_08_sp" />

        <TextView
            android:id="@+id/checkout_adapter_row_layout_iv_item_qty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1"
            android:text="100"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textAppearance_mdpi_08_sp" />

        <TextView
            android:id="@+id/checkout_adapter_row_layout_iv_item_qty_increase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_add_qty"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textAppearance_mdpi_08_sp" />
    </LinearLayout>

</LinearLayout>