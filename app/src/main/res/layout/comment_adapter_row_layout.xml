<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/factor_mdpi_20_dp"
    android:layout_margin="@dimen/factor_mdpi_02_dp">

    <ImageView
        android:id="@+id/comment_adapter_row_layout_iv_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:src="@drawable/ic_check_circle" />

    <TextView
        android:id="@+id/comment_adapter_row_layout_tv_sub_option_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:singleLine="true"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/textAppearance_mdpi_10_sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/factor_mdpi_01_dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/factor_mdpi_01_dp"
        android:background="@color/colorWhite"/>
</RelativeLayout>